<!-- header - start -->
<%- include('layout/header')%>
    <!-- header - end -->

    <!-- container - start -->
    <div class="container">
        <div class="row">
            <h3>Edit Users (<%= user.name %>)</h3>
            <!-- <h3>Edit Users</h3> -->
            <form action="/update/<%= user._id %>" method="post" enctype="multipart/form-data">
                <div class="f-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" required name="name" value="<%= user.name %>">
                </div>
                <div class="f-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" required name="email" value="<%= user.email %>">
                </div>
                <div class="f-group">
                    <label for="phone">Phone</label>
                    <input type="tel" id="phone" required name="phone" value="<%= user.phone %>">
                </div>
                <div class="f-group">
                    <label for="image">Select Img</label>
                    <input type="file" name="image" id="image">
                    <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
                </div>
                <input type="hidden" name="old_image" value="<%= user.image %>">
                <button type="submit" value="Update User" name="submit">submit</button>
            </form>
        </div>
    </div>
    <!-- container - end -->

    <!-- footer - start -->
    <%- include('layout/footer')%>
        <!-- footer - end -->